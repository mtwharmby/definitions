<definition name="NXmx" extends="NXobject" type="group"
	version="1.4" category="application"
	xmlns="http://definition.nexusformat.org/nxdl/3.1"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://definition.nexusformat.org/nxdl/3.1 ../nxdl.xsd"
	>
	
	<group type="NXentry">
		<attribute name="file_time" type="NX_DATE_TIME"></attribute>
		<attribute name="file_name"></attribute>
		<field name="experiment_start_time" type="NX_DATE_TIME"></field>
		<field name="experiment_end_time" type="NX_DATE_TIME"></field>
		<field name="entry_identifier"><doc>User supplied name of experiment.</doc></field>
		<field name="experiment_identifier"><doc>The visit ID.</doc></field>
		<field name="program_name"><doc>Software package that wrote this file.</doc></field>
		<field name="scan_command"><doc>The set of instructions used to run this scan in JSON format.</doc></field>
		<field name="scan_identifier"><doc>The number of the scan.</doc></field>
		
		<group type="NXinstrument" name="instrument">
			<field name="name"><doc>Name of instrument where data was collected, e.g. I15-1.</doc></field>
			<field name="alternative_name"><doc>User friendly alternative name for instrument, e.g. XPDF</doc></field>
			
			<group type="NXsource" name="source"></group>
			<group type="NXinsertion_device" name="insertion_device"></group>
			
		</group>
	</group>
</definition>
